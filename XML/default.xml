        Name="Root"
        Condition="stx'lua.geno'.Template(stx'lua.screen'.GetLayout())"
        File="template.xml" 
        InitCommand="%stx'lua.geno'.InitCmd"
        OnCommand="%stx'lua.geno'.OnCmd"
    />
